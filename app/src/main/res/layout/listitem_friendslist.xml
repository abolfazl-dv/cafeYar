<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemListFriendsImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemListFriendsUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="ابوالفضل دروی"
            android:textColor="@color/normalTextColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/itemListFriendsCodeText"
            app:layout_constraintEnd_toStartOf="@+id/itemListFriendsImage"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/itemListFriendsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="AD5482138"
            android:textColor="@color/normalTextColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/itemListFriendsCodeText"
            app:layout_constraintEnd_toStartOf="@+id/itemListFriendsCodeText"
            app:layout_constraintTop_toTopOf="@+id/itemListFriendsCodeText" />

        <TextView
            android:id="@+id/itemListFriendsCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="کد کاربر: "
            android:textColor="@color/normalTextColor"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/itemListFriendsImage"
            app:layout_constraintTop_toBottomOf="@+id/itemListFriendsUserName" />

        <Button
            android:backgroundTint="@color/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:paddingLeft="8dp"
            android:textColor="@color/normalTextColor"
            android:paddingRight="8dp"
            android:text="دعوت به ایونت"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>