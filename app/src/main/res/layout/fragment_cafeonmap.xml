<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mapbox.maps.MapView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/cafeOnMapMapView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FABCafeOnMapFilter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/gold"
        android:src="@drawable/ic_filter"
        app:backgroundTint="@color/gold"
        app:elevation="5dp"
        android:layout_marginTop="16dp"
        app:fabCustomSize="48dp"
        app:layout_constraintEnd_toEndOf="@+id/FAbCafeMapToCafeList"
        app:layout_constraintStart_toStartOf="@+id/FAbCafeMapToCafeList"
        app:layout_constraintTop_toBottomOf="@+id/FAbCafeMapToCafeList" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/FAbCafeMapToCafeList"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/gold"
        android:src="@drawable/ic_grid_menu"
        app:backgroundTint="@color/gold"
        app:fabCustomSize="48dp"
        app:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

